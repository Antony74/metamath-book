#!/bin/sh
# Generate metamath.pdf from source file metamath.tex.

# Stop processing if error occurs (-e) and show what we're doing (-x)
set -ex

rm -f realref.sty metamath.bib
touch metamath.ind
pdflatex -halt-on-error metamath
pdflatex -halt-on-error metamath
bibtex metamath
makeindex metamath
pdflatex -halt-on-error metamath
pdflatex -halt-on-error metamath
